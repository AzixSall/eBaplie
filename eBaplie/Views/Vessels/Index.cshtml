@model IEnumerable<eBaplie.Models.Vessel>

@{
    ViewData["Title"] = "Index";
}

<h1>Vessel list</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Add a new vessel</a>
</p>
@foreach (var item in Model) 
{
    <div class="card" style="width: 18rem;">
        <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" class="card-img-top" alt="Vessel image">
        <div class="card-body">
        <h5 class="card-title">@item.Name</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View vessel</a>
        </div>
    </div>
}